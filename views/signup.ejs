    <script>
        $("#authBtn").click(function(){
            window.open('https://testapi.openbanking.or.kr/oauth/2.0/authorize?response_type=code&client_id=WJejG21ttsj2BsEZWMRzQGH4FkzR1n4uBCQ578Wv&redirect_uri=http://localhost:3000/authResult&scope=login inquiry transfer&state=12345678901234567890123456789012&auth_type=0','인증하기','width=430,height=550,location=no,status=no,scrollbars=yes');
        }); // 서버 정보를 입력하고 사용자 인증 요청 창을 띄움

        $("#signupBtn").click(function(){
            var userName = $("#userName").val();
            var userEmail = $("#email").val();
            var userPassword = $("#password").val();
            var userAccessToken = $("#accessToken").val();
            var userRefreshToken = $("#refreshToken").val();
            var userSeqNo = $("#usernum").val();
            
            $.ajax({
                url: "/signup",
                type: 'POST',
                data: {
                    userName : userName,
                    userEmail : userEmail,
                    userPassword : userPassword,
                    userAccessToken : userAccessToken,
                    userRefreshToken : userRefreshToken,
                    userSeqNo : userSeqNo
                },
                success: function(result){
					if(result == '1'){
						alert("가입 완료");
						window.location.href = "http://localhost:3000/login";
					}else{
						alert("가입 실패")
					}
                    
                }
            });
        })
